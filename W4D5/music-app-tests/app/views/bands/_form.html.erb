<% action = band.persisted? ? band_url(band) : bands_url %>

<form action="<%=action %>" method="post">
  <%= change_method_edit(band) %>
  <%= auth_token %>

  <label for="band_name">Band Name</label>
  <input
    type="text"
    name="band[name]"
    value=<%=@band.name%> >
  <br><br>

  <input type="submit" value="Submit">

</form>
