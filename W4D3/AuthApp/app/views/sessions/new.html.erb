<h1>Log in!</h1>

<form action="/session" method="POST">
  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>" >

  <label for="user_username">Username</label>
  <input
    id="user_username"
    type="text"
    name="user[username]" >

  <br><br>

  <label for="user_password">Password</label>
  <input
    id="user_password"
    type="password"
    name=user[password] >

  <br><br>

  <input type="submit" value="Log in!">

</form>
